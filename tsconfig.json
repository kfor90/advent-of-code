{
  "extends": "@tsconfig/esm/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist/**/*", "node_modules"]
}
